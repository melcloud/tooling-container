# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

# shell files with additional formatter
[*.sh]
binary_next_line = true
switch_case_indent = true
